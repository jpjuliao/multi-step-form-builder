{
    "name": "jpjuliao/multi-step-form-builder",
    "description": "A comprehensive multi-step form builder plugin with drag-and-drop interface",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Juan Pablo Juliao",
            "email": "contact@jpjuliao.com",
            "homepage": "https://jpjuliao.github.io/"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "JPJULIAO\\Wordpress\\MultiStepFormBuilder\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JPJULIAO\\Wordpress\\MultiStepFormBuilder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-verbose": "phpunit --verbose --testdox",
        "test-coverage": "phpunit --coverage-html coverage",
        "lint": "phpcs --standard=phpcs.xml .",
        "lint-fix": "phpcbf --standard=phpcs.xml .",
        "install-dev": "composer install --prefer-dist --no-progress --no-suggest --optimize-autoloader"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
